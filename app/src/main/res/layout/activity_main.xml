<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnInsertRecord"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Insert New Record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInsertRecord" />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:backgroundTint="#FF0000"
        android:text="refresh"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnInsertRecord"
        app:layout_constraintStart_toEndOf="@+id/btnInsertRecord" />
</androidx.constraintlayout.widget.ConstraintLayout>